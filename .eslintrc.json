{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "babelOptions": {
            "configFile": "./.babel-eslintrc"
        }
    },
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "semi": [2, "always"],
        "no-unused-vars": "warn",
        "no-constant-condition": ["error", { "checkLoops": false }]
    }
}